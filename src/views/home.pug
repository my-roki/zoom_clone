doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Zoom Clone
    link(rel="stylesheet", href="https://unpkg.com/mvp.css")
  body 
    header 
      h1 Zoom
    main
      div#welcome
        form
          input(required, placeholder="Room Name", type="text")
          button Enter Room
      div#call
        div#myStream
          video#myFace(autoplay, playsinline, muted, width="300", height="300")
          video#yourFace(autoplay, playsinline, muted, width="300", height="300")
          button#mute UnMute 
          button#camera Camera Off
          select#camera-device 
    script(src="/socket.io/socket.io.js") 
    script(src="/public/js/app.js")  