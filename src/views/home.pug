doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Zoom Clone
    link(rel="stylesheet", href="https://unpkg.com/mvp.css")
  body 
    header 
      h1 Zoom
    main
      div#welcome
        form
          input(placeholder="room name", required, type="text")
          button Enter Room
        h4 Open Rooms! 
        ul
      div#room
        h2
        ul 
        form#nickname
          input(placeholder="Write your name", required, type="text")
          button Save
        form#message
          input(placeholder="Write a Message", required, type="text")
          button Send
    script(src="/socket.io/socket.io.js") 
    script(src="/public/js/app.js")  